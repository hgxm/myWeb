<include file="Public:header"/>
<load href="__PUBLIC__/Css/Home/link.css"/>

<div class="warp">

    <div class="create_link">
        <p class="title">
            <span>查看链接</span>
            <a href="javascript:window.close();">返回</a>
        </p>
        <div class="link_title fl">
            <label class="bar">外链标题：</label>
            <div class="link_count">
                {$activity.act_title}
            </div>
        </div>
        <div class="link_list">
            <label class="bar">外链列表：</label>
            <div class="link_box">
                <volist name="links" id="link">

                    <div class="link-unit">
                        <div class="link-cont">
                            <label>名称：{$link.li_title}</label>

                            <label>链接：<a href="{$link.li_url}">{$link.li_url}</a></label>

                        </div>
                    </div>
                </volist>
            </div>
        </div>

</div>
<include file="Public:footer"/>