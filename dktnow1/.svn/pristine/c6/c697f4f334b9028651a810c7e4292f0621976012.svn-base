<include file="Public:header"/>
<load href="__PUBLIC__/Css/Home/reading.css"/>

<div class="warp">
    <div class="reading">
        <p class="title">
            <span>拓展阅读</span>
            <a href="javascript:window.close();">返回</a>
        </p>
        <div class="reading_title fl">
            <label class="bar">标题：</label>
            <div class="show_cont">
                {$activity.act_title}
            </div>
        </div>
        <div class="reading_require fl">
            <label>要求：</label>
            <div class="show_cont">
                {$activity.act_note}
            </div>
        </div>
        <div class="res_list list fl">
            <label>资源列表：</label>
            <div>
                <ul>
                    <volist name="resource" id="res">
                        <li attr="{$res.ar_id}">
                            <a class="res_li" href="__APPURL__/AuthResource/show/ar_id/{$res.ar_id}" target="_blank">
                                <img src="{$res.ar_upload}" width="100" height="75">
                                <a class="del_res" style="display: none;"></a>
                            </a>
                            <a class="res_title" href="javascript:void(0)" title="{$res.ar_title}">{$res.ar_title}</a>
                        </li>
                    </volist>
                </ul>
            </div>
        </div>
    </div>

</div>

<include file="Public:footer"/>