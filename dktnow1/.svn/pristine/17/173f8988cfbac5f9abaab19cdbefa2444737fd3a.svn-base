                </li>
            </ul>
        </div>
        <div>
            <ul class="list_list list_hea" id="list_main">

                <volist name="list" id="list">
                    <li>
                        <input class="data_check" type="checkbox" value="{$list.rc_id}" name="key"/>
                        <span class="data_id">{$list.rc_id}</span>
                        <span class="data_name">{$list.rc_title}</span>
                        <span class="data_explain">{$list.pid_name}</span>
                        <span class="data_sort">{$list.is_show}</span>
