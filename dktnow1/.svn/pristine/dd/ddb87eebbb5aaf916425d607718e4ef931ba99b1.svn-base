<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/main_bg">

    <RelativeLayout
    	android:layout_width="878dp"
    	android:layout_height="match_parent"
     	android:orientation="vertical" 
		android:layout_alignParentLeft="true">
		
    	<RelativeLayout android:id="@+id/main_blackboard_layout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
     	android:orientation="vertical" 
     	android:layout_marginTop="80dp"
     	android:layout_marginLeft="50dp"
    	android:background="@drawable/main_blackboard">
    	
		</RelativeLayout>
		<RelativeLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:layout_below="@+id/main_blackboard_layout"
	     	android:orientation="vertical" >
 			<RadioGroup
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	            <RadioButton
	                android:id="@+id/main_myresourse_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:layout_marginLeft="50dp"
	                android:drawableTop="@drawable/myresourse_selector"                
	                android:text="@string/myresourse" 
	                android:textColor="@color/white"
	                android:textSize="16sp"/>
				<RadioButton
	                android:id="@+id/main_graffiti_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:layout_marginLeft="5dp"
	                android:drawableTop="@drawable/graffiti_selector"                
	                android:text="@string/graffiti" 
	                android:textColor="@color/white"
	                android:textSize="16sp"/>	                
				<RadioButton
	                android:id="@+id/main_note_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:layout_marginLeft="5dp"
	                android:drawableTop="@drawable/note_selector"                
	                android:text="@string/note" 
	                android:textColor="@color/white"
	                android:textSize="16sp"/>
				<RadioButton
	                android:id="@+id/main_recorder_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:layout_marginLeft="5dp"
	                android:drawableTop="@drawable/recorder_selector"                
	                android:text="@string/recorder" 
	                android:textColor="@color/white"
	                android:textSize="16sp"/>
				<RadioButton
	                android:id="@+id/main_photograph_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:layout_marginLeft="5dp"
	                android:drawableTop="@drawable/photograph_selector"                
	                android:text="@string/photograph" 
	                android:textColor="@color/white"
	                android:textSize="16sp"/>	                	                
			</RadioGroup>   	
		</RelativeLayout>
		
	</RelativeLayout>
	<RelativeLayout
    	android:layout_width="402dp"
    	android:layout_height="match_parent"
     	android:orientation="vertical" 
     	android:layout_alignParentRight="true">
    	
    	<Button
    		android:focusable="true"
			android:focusableInTouchMode="true"
            android:id="@+id/main_set_ip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"   
            android:layout_marginRight="10dp"
            android:background="@drawable/main_set_ip" />
		<Button
            android:id="@+id/main_vesion_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/main_set_ip_btn"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"     
            android:background="@drawable/main_vesion" />
		<TextView
            android:id="@+id/main_user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_vesion_btn"
           	android:text="@string/user_login"
           	android:textColor="@color/white" 
           	android:layout_marginLeft="10dp"
           	android:layout_marginTop="40dp"    
           	android:textSize="25sp"/>
		<RelativeLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	     	android:orientation="vertical" 
	     	android:layout_marginLeft="10dp"
	     	android:layout_marginTop="15dp"
	     	android:layout_below="@+id/main_user_login"
	     	android:background="@drawable/main_login_bg">
	     	
	     	<RelativeLayout
	     		android:id="@+id/main_user_login_relat"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		     	android:orientation="vertical" 
		     	android:layout_marginLeft="5dp"
		     	android:layout_marginTop="10dp"
		     	android:focusable="true"
				android:focusableInTouchMode="true"
		     	android:background="@drawable/main_user_ms_bg">
		     	
	     		<LinearLayout
		            android:id="@+id/user_login_name_linear"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="15dp"
		            android:layout_marginLeft="5dp"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/user_login_name_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/user_name"
		                android:layout_marginLeft="5dp"
		                android:textColor="@color/login_userpass"
		                android:textSize="18sp" />
		
		            <EditText
		                android:id="@+id/user_login_name_edit"
		                android:layout_toRightOf="@+id/user_login_name_text"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="#00000000"
		                android:textCursorDrawable="@null"
		                android:singleLine="true"
		                android:layout_marginLeft="10dp"
		                android:textColor="@color/login_userpass"
		                android:text="" />
		        </LinearLayout>
		        <LinearLayout
		            android:id="@+id/user_login_pwd_linear"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/user_login_name_linear"
		            android:layout_marginTop="25dp"
		            android:layout_marginLeft="5dp"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/user_login_pwd_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/user_pwd"
		                android:layout_marginLeft="5dp"
		                android:textColor="@color/login_userpass"
		                android:textSize="18sp" />
		
		            <EditText
		                android:id="@+id/user_login_pwd_edit"
		                android:layout_toRightOf="@+id/user_login_pwd_text"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="#00000000"
		                android:singleLine="true"
		                android:password="true"
		                android:textCursorDrawable="@null"
		                android:layout_marginLeft="10dp"
		                android:textColor="@color/login_userpass"
		                android:text="" />
		        </LinearLayout>
	    	</RelativeLayout>
	    	<TextView
                android:id="@+id/user_login_ms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_save_ms"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/main_user_login_relat"
                android:textColor="@color/login_userpass"
                android:textSize="18sp" />
           	<Button
	            android:id="@+id/main_save_ms_btn"
	            android:layout_width="56dp"
	            android:layout_height="26dp"
	            android:layout_toRightOf="@+id/user_login_ms_text"
	            android:layout_below="@+id/main_user_login_relat"
	            android:layout_marginLeft="180dp"
	            android:layout_marginTop="15dp"     
	            android:background="@drawable/main_user_ms_btn_bg" />
	       	<Button
	            android:id="@+id/main_user_login_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/main_save_ms_btn"
	            android:layout_marginTop="20dp"   
	            android:layout_marginLeft="40dp"
	           	android:textColor="@color/login_userpass"
	            android:text="@string/login"  
	            android:background="@drawable/login_btn_selector" />
	       	<Button
	            android:id="@+id/main_user_out_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/main_user_login_btn"
	            android:layout_marginTop="15dp"  
	            android:layout_marginLeft="40dp"
	            android:text="@string/out" 
	            android:textColor="@color/login_userpass"
	            android:background="@drawable/login_btn_selector" />
	    </RelativeLayout>
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/main_focus"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="380dp"
	    android:layout_marginTop="130dp"
	    android:visibility="invisible"/>
</RelativeLayout>
