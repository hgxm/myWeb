*{
    margin:0;
    padding:0;
    list-style:none;
    font-size:14px;
}
body{
    width:100%;
    font-family: "Hiragino Sans GB","Hiragino Sans GB W3","Microsoft YaHei","Î¢ÈíÑÅºÚ",tahoma,arial,simhei,"ºÚÌå";
    font-size:12px;
    background:url('/apps/test/Public/Images/Home/body_bg.png') repeat;
}
.left {
    float:left;
    width:35%;
    height:100%;
    border-right:1px solid #aaa;
}
.left div {
    float:left;
    width:100%;
    min-height:30px;
}
.left div select,.left div input,.left div label {
    float:left;
    height:30px;
    line-height:30px;
    margin-top:10px;
    font-size:16px;
}
.left div select,.left div input {
    padding-left:5px;
}
.left div select {
    cursor:pointer;
}
.left div label {
    width:25%;
    text-align:right;
    margin-right:8px;
}
.left div select,.left div input {
    width:60%;
}
.left div textarea {
    float:left;
    width:50%;
    min-height:300px;
    line-height:25px;
    margin-top:10px;
    border:1px solid #46be51;
    resize:vertical;
    color:#444;
}
.left div p {
    float:left;
    width:20%;
    line-height:20px;
    margin:10px 0px 0px 5px;
    color:#F76060;
}
.left .submit input {
    display:block;
    width:174px;
    height:38px;
    line-height:38px;
    margin-left:27%;
    margin-top:20px;
    background:url("/apps/test/Public/Images/Home/btns.png") no-repeat ;
    border:none;
    color:#fff;
    cursor:pointer;
}
.left .submit input:hover {
    background-position:0px -38px;
}
.right {
    width:60%;
    float:left;
    margin:10px 0px 0px 20px;
}
.right ul {
    clear:both;
}
.right ul li {
    float:left;
    width:150px;
    height:40px;
    line-height:30px;
    text-align:center;
    cursor:pointer;
}
.right ul li.on {
    color:#22a558;
    background:url("/apps/test/Public/Images/Home/group_li.png") no-repeat bottom ;
}
.right .news {
    float:left;
    width:100%;
    min_height:520px;
    padding:15px 10px;
    background:#F2F2F2;
}
.news .show {
    display:none;
    word-wrap: break-word;
}
td {
    line-height:30px;
    padding:10px 0px 0px 10px;
    border:1px solid #ccc;
}