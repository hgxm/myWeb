<include file="../Public/header_main" />

<load file="__PUBLIC__/Css/Ilc/system_add.css"/>
<script type="text/javascript">
function check() {

    var name_val = $.trim($('input[name=m_name]').val());

    if (name_val == "") {

        alert("名称不能为空")
        return false;
    }

    var sys_tex = $.trim($('textarea').val());
    if (sys_tex.length >300) {
        alert("内容不能超过300字符")
        return false;
    }
}

// 全选
function allSelect() {

    $('.attribute input[type=checkbox]').each(function(){
        $(this).prop('checked', true);
    })
}

// 全不选
function allUnSelect() {
    $('.attribute input[type=checkbox]').each(function(){
        $(this).prop('checked', false);
    })
}

// 反选
function InverSelect() {
    $('.attribute input[type=checkbox]').each(function(){

        $(this).prop('checked', !$(this).prop('checked'));
    })
}
</script>
    <div class="title_hea">
        <i class="fl">编辑类型</i>
        <a href="__URL__/">返回列表</a>
    </div>
    <form method="post" action="__URL__/update/" onsubmit="return check();">
        <ul class="add_option fl">
            <li>
                <label>名称：</label>
                <input class="fl" type="text" name="m_name" value="{$vo.m_name}"/>
            </li>
            <li>
                <label>说明：</label>
                <textarea placeholder="内容不能超过300字符" name="m_title">{$vo.m_title}</textarea>
            </li>
            <li>
                <label>属性：</label>
                    <div id="subjects">
                    <voList name="attrList" id="attribute" >
                        <input name="m_list[]" style="width:auto;" type="checkbox" <in name="attribute.at_id" value="$vo.m_list">checked</in>  value="{$attribute.at_id}"/><span class="fl" style="line-height:29px;">{$i}.{$attribute.at_title}</span>
                    </voList>
                    </div>

                    <input type="button" onclick="allSelect()" value="全 选" class="fin" id="mode_edit"/>
                    <input type="button" onclick="InverSelect()" value="反 选" class="fin" id="mode_edit"/>
                    <input type="button" onclick="allUnSelect()" value="全 否"  class="fin" id="mode_edit"/>

            </li>

            <li>
                <label><i>*</i>状态：</label>
                <select NAME="m_status">
                    <option <eq name="vo.m_status" value="1" >selected</eq> value="1">启用</option>
                    <option <eq name="vo.m_status" value="9" >selected</eq> value="9">禁用</option>
                </select>
            </li>
            <li class="coBtn">
                <input type="hidden" name="m_id" value="{$vo.m_id}">
                <button class="save fin" value="" type="submit">保存</button>
                <button class="reset fin" value="" type="reset">清除</button>
            </li>
        </ul>
    </form>