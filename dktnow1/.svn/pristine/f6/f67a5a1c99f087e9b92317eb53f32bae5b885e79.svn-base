                        NSString *strURL = [arr objectAtIndex:i];
                        NSLog(@"strURL is %@",strURL);
                        NSData *data = [[NSData alloc] initWithContentsOfURL:[NSURL URLWithString:strURL]];
                        
                        
                        
                        NSArray *arr2 = [strURL componentsSeparatedByString:@"/"];
