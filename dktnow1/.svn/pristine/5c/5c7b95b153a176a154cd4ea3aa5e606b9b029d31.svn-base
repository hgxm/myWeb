<include file="../Public/header_main" />
<load file="__PUBLIC__/Css/Ilc/resource_index.css"/>
<script type="text/javascript">
$(function(){
 var listObj = {"data_check": "2%","data_id": "8%" ,"data_name": "20%","data_explain": "14%","data_default": "14%","data_sort": "12%","data_status": "12%","data_hand": "10%","data_edit": "4%","data_child": "8%"};
 setWidth(listObj);
})

function child(id){
    location.href = URL+"/index/sn_pid/"+id;
}
</script>
    <h2 class="res">
        学校节点列表<neq name="sn_pid" value="0"><a class="fr stydy_return" HREF="javascript:history.back(-1)">返回列表</a></neq>
    </h2>
    <form name="form" method="post" action="__URL__/index">
        <div class="model_search">
            <a>名称：</a>
            <input TYPE="text" title="名称查询" name="sn_name" >
            <a class="search">搜索</a>
        </div>
    </form>
    <div class="tools fl">
        <a class="add">
            <i></i>
            新增
        </a>
        <a class="edit">
            <i></i>
            编辑
        </a>
        <a class="del">
            <i></i>
            删除
        </a>
        <a class="forbidden">
            <i></i>
            禁用
        </a>
        <a class="resume">
            <i></i>
            启用
        </a>
    </div>
    <div id="system_list">
        <div>
            <ul class="list_hea">
                <li>
                    <input class="data_check" type="checkbox" name="allcheck" onclick="CheckAll('system_list')"/>
                    <span class="data_id">编号</span>
                    <span class="data_name">名称</span>
                    <span class="data_explain">显示名</span>
                    <span class="data_sort">排序</span>
                    <span class="data_status">状态</span>
                    <span class="data_hand">操作</span>
                </li>
            </ul>
        </div>
        <div>
            <ul class="list_list list_hea" id="list_main">

                <volist name="list" id="list">
                    <li>
                        <input class="data_check" type="checkbox" value="{$list.sn_id}" name="key"/>
                        <span class="data_id">{$list.sn_id}</span>
                        <span class="data_name">{$list.sn_name}</span>
                        <span class="data_explain">{$list.sn_title}</span>
                        <span class="data_sort">{$list.sn_sort}</span>
                        <span class="data_status">{$list.sn_status|getStatus}</span>
                        <span class="data_hand">{$list.sn_status|showStatus=$list['sn_id']}</span>
                        <span class="data_edit"><a href="javascript:edit({$list.sn_id})">编辑</a></span>
                        <eq name="sn_pid" value="0">
                            <span class="data_child"><a href="javascript:child({$list.sn_id})">子节点</a></span>
                        </eq>
                    </li>
                </volist>

            </ul>
        </div>
        <div class="page">
            {$page}
        </div>
    </div>
