<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/dohomework_popu_bg">

    <RelativeLayout android:id="@+id/move_re"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        
        <Button android:id="@+id/homework_camera"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:layout_marginLeft="20dp"
    		android:layout_marginTop="8dp"
    		android:background="@drawable/dohomework_camera"
    		android:layout_alignParentLeft="true"/>
        
        <Button android:id="@+id/move_popu_close"
            android:layout_width="56dp"
    		android:layout_height="25dp"
    		android:layout_marginRight="15dp"
    		android:background="@drawable/homework_ko_bg"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="464dp">
        
        <dkt.student.view.DeputyView 
			android:id="@+id/homework_deputyview"
			android:layout_width="900dp"
			android:layout_height="460dp"
			android:layout_marginBottom="10dp"
			android:layout_centerInParent="true"/>
        
        <LinearLayout
	        android:id="@+id/note_book_page_linear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="20dp"
	        android:layout_marginBottom="5dp"
	        android:layout_alignParentRight="true" >
	
	        <ImageButton
	            android:id="@+id/note_book_pre_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_pre_selector"
	            android:padding="20dp"
	            android:background="#00000000" />
	
	        <TextView
	            android:id="@+id/note_book_page_txt"
	            android:layout_width="70dp"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="第 1/1页" />
	
	        <ImageButton
	            android:id="@+id/note_book_next_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_next_selector"
	               android:padding="20dp"
	            android:background="#00000000"  />
	    </LinearLayout> 
        
    </RelativeLayout>

</LinearLayout>