    <div class="title_hea">
        <i class="fl">后台用户编辑</i>
        <a href="__URL__/">返回列表</a>
    </div>

        <ul class="add_option">
            <li>
                <label>重置密码：</label>
                <input type="text" id="resetPwd">
                <input type="button" style="width:100px;height:27px;margin-left:10px;" class="submit fin" onclick="resetPwd()" value="重置密码">
            </li>

            <form method="post" action="__URL__/update/" onsubmit="return check();">
                <li>
                    <label>用户名：</label>
                    {$vo.u_account}
                </li>

                <li>
                    <label>昵称：</label>
                    <input class="fl" type="text" name="u_nickname" value="{$vo.u_nickname}"/>
                </li>

                <li>
                    <label>状态：</label>
                    <select name="u_status">
                        <option value="1" <eq name="vo.u_status" value="1">selected</eq>>启用</option>
                        <option value="9" <eq name="vo.u_status" value="9">selected</eq>>禁用</option>
                    </select>
                </li>
                <li class="coBtn">
                    <input type="hidden" class="medium bLeft" name="u_id" value="{$vo.u_id}">
                    <button class="save fin" value="" type="submit">保存</button>
                    <button class="reset fin" value="" type="reset">清除</button>
                </li>

            </form>
        </ul>