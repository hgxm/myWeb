<include file="../Public/header_main" />
<load file="__PUBLIC__/Css/Ilc/resource_index.css"/>
<script type="text/javascript">
$(function(){
 var listObj = {"data_check": "2%","data_id": "8%" ,"data_name": "10%","data_explain": "14%","data_default": "10%","data_sort": "12%","data_status": "15%","data_hand": "10%","data_tel": "10%","data_time": "15%"};
 setWidth(listObj);
})
</script>
    <form name="form" method="post" action="__URL__/index">
        <div class="model_search">
            <a>班级名称：</a>
            <input TYPE="text" title="名称查询" name="c_title" >
            <a class="search">搜索</a>
        </div>
    </form>
    <div class="tools fl">
        <a class="add">
            <i></i>
            新增
        </a>
        <a class="edit">
            <i></i>
            编辑
        </a>
        <a class="del">
            <i></i>
            删除
        </a>

    </div>
    <div id="system_list">
        <div>
            <ul class="list_hea">
                <li>
                    <input class="data_check" type="checkbox" name="allcheck" onclick="CheckAll('system_list')"/>
                    <span class="data_id">编号</span>
                    <span class="data_name">学校名称</span>
                    <span class="data_explain">班级名称</span>
                    <span class="data_default">学制</span>
                    <span class="data_status">学界</span>
                    <span class="data_time">学生人数</span>
                    <span class="data_tel">是否毕业</span>
                    <span class="data_hand">操作</span>
                </li>
            </ul>
        </div>
        <div>
            <ul class="list_list list_hea" id="list_main">

                <volist name="list" id="list">
                    <li>
                        <input class="data_check" type="checkbox" value="{$list.c_id}" name="key"/>
                        <span class="data_id">{$list.c_id}</span>
                        <span class="data_name">{$list.schoolName}</span>
                        <span class="data_explain">{$list.c_title}</span>
                        <span class="data_default">{$list.c_type}</span>
                        <span class="data_status">{$list.c_grade}</span>
                        <span class="data_time">{$list.c_peoples}</span>
                        <span class="data_tel">{$list.c_is_graduation_name}</span>
                        <span class="data_hand"><a href="javascript:edit({$list.c_id})">编辑</a></span>
                        <span class="data_del"><a href="javascript:user({$list.c_id})">师生</a></span>
                    </li>
                </volist>

            </ul>

        </div>
        <div class="page">
            {$page}
        </div>
    </div>

    <div class="schoolType" style="display:none;">
        <volist name="schoolType" id="schoolType">
            <span>{$schoolType}</span>
        </volist>
    </div>
