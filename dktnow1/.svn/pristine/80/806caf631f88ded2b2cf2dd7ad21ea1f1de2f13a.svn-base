<include file="../Public/header_main" />

<load file="__PUBLIC__/Css/Ilc/system_add.css"/>
<script type="text/javascript">
function check() {

    var name_val = $.trim($('input[name=n_name]').val());
    var title_val = $.trim($('input[name=n_title]').val());

    if (name_val == "") {

        alert("名称不能为空")
        return false;
    }

    if (title_val == "") {

        alert("显示名不能为空")
        return false;
    }
}
</script>
    <div class="title_hea">
        <i class="fl">编辑<eq name="vo.n_level"  value="1">应用</eq><eq name="vo.n_level" value="2">模块</eq><eq name="vo.n_level"  value="3">操作</eq></i>
        <a href="__URL__/">返回列表</a>
    </div>
    <form method="post" action="__URL__/update/" onsubmit="return check();">
        <ul class="add_option">
            <li>
                <label><eq name="vo.n_level"  value="1">应用</eq><eq name="vo.n_level" value="2">模块</eq><eq name="vo.n_level"  value="3">操作</eq>名：</label>
                <input class="fl" type="text" name="n_name" value="{$vo.n_name}"/>
            </li>
            <li>
                <label>显示名：</label>
                <input class="fl" type="text" name="n_title" value="{$vo.n_title}"/>
            </li>
            <eq name="vo.n_level" value="2">
                <li>
                    <label>链接</label>
                    <input class="fl" type="text" name="n_url" value="{$vo.n_url}"/>
                </li>
                <li>
                    <label>归属</label>
                    <select class="fl" name="g_id">
                        <option value="0">首页</option>
                        <volist name="list" id="group">
                            <option value="{$key}" <eq name="key" value="$vo['g_id']">selected</eq>>{$group}</option>
                        </volist>
                    </select>
                </li>
                <li>
                    <label>显示</label>
                    <select class="fl" name="n_show">
                        <option <eq name="vo.n_show" value="1" >selected</eq> value="1">显示</option>
                        <option <eq name="vo.n_show" value="9" >selected</eq> value="9">不显示</option>
                    </select>
                </li>
            </eq>
            <li>
                <label><i>*</i>状态：</label>
                <select class="fl" name="n_status">
                    <option <eq name="vo.n_status" value="1" >selected</eq> value="1">启用</option>
                    <option <eq name="vo.n_status" value="9" >selected</eq> value="9">禁用</option>
                </select>
            </li>
            <li class="coBtn">
                <input type="hidden" name="n_id" value="{$vo.n_id}" >
                <input type="hidden" name="n_pid" value="{$vo.n_pid}">
                <button class="save fin" value="" type="submit">保存</button>
                <button class="reset fin" value="" type="reset">清除</button>
            </li>
        </ul>
    </form>