/* 系统配置 */
.system{
    width: 840px;
    height: auto;
    margin-top: 25px;
    margin-left: 28px;
    display:inline;
    overflow:hidden;
}
.system .sys_menu a{
    display:inline;
    height:60px;
    line-height:60px;
    margin: 0px 20px 0px 20px;
    color: #99999D;
    font-size: 18px;
    cursor: pointer;
    overflow:hidden;
}
.system .sys_menu a.selected{
    color: #080808;
    font-weight: 400;
}
.system .filter {
    float:left;
    width:780px;
    height:auto;
    margin-bottom:20px;
    background:#F5F5F3;
    padding:10px 20px 10px 20px;
}
.system .filter .tools {
    width:100%;
    height:auto;
    margin-top:10px;
}
.filter .search .more_search {
    width: 100%;
    height: auto;
}
.filter .search .more_search li.gcType {
    float: left;
    margin-top: 10px;
}
.filter .search .more_search li label {
    float: left;
    width: 50px;
    font-size: 14px;
    color: #494949;
    font-weight: 400;
    margin-top: 5px;
}
.filter .search .more_search li div {
    float: left;
    width: 680px;
}
.filter .search .more_search li span {
    display: inline-block;
    margin: 0 10px 3px 10px;
    padding: 5px 20px;
    border: 1px solid #20D691;
    cursor: pointer;
}
.filter .search .more_search li span.on {
    background: #93E5BD;
}

/* 新增---年级课程设置 */
.addBox {
    float: left;
    width: 780px;
    height: auto;
    margin-top: 25px;
    margin-bottom: 20px;
    background: #F5F5F3;
    padding: 10px 20px 20px 20px;
    overflow:hidden;
}
.addBox .title {
    padding: 5px 0 5px 10px;
    margin-bottom:5px;
    width:770px;
    text-align: left;
    font-size: 14px;
    font-weight: 400;;
    letter-spacing: 4px;
    border-radius: 2px;
    color: #1D1D1D;
    font-size: 16px;
}
.addOption {
    padding:10px 10px 0 10px;
    float:left;
}
.addOption li {
    float:left;
    width:750px;
    line-height:29px;
    margin-bottom: 10px;
}
.addOption li label {
    float: left;
    width: 60px;
    line-height: 29px;
    padding-right: 10px;
    font-size: 14px;
    color: #494949;
    font-weight: 400;
    text-align:right;
}
.addOption li span.on {
    background: #93E5BD;
}
.addOption li span {
    display: inline-block;
    margin-right: 15px;
    margin-bottom: 5px;
    padding: 5px 20px;
    line-height:16px;
    border: 1px solid #20D691;
    cursor: pointer;
}
.addOption li div {
    float:left;
    width: 680px;
}
.addOption li select {
    width:80px;
    height:25px;
}
.addOption li.coBtn .saveBtn{
    float:left;
    width:174px;
    height:38px;
    margin-top:20px;
    margin-right:10px;
    background:url('/apps/study/Public/Images/Ilc/save.png') no-repeat;
}
.addOption li.coBtn .clearBtn{
    float:left;
    width:174px;
    height:38px;
    margin-top:20px;
    background:url('/apps/study/Public/Images/Ilc/clear.png') no-repeat;
}
/* 新增学年 */
.addOption li {
    margin-bottom:10px;
}
.addOption li.xyear select{
    margin-left:10px;
    _margin-top:4px;
}
.addOption li button {
    margin-right:10px;
    text-indent:5px;
}
li.sxy input ,li.xxq input {
    width:180px;
    height:26px;
    line-height:26px;
    text-indent:5px;
    margin:0 10px;
}