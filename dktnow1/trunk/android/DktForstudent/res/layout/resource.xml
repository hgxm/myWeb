<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notes_show_bg"
    android:focusableInTouchMode="true" >

    <EditText
        android:id="@+id/resource_search_edit"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/note_search_brown"
        android:paddingRight="35dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
         />
    <ImageView 
        android:id="@+id/resource_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="3dp"
        android:layout_alignRight="@id/resource_search_edit"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/note_search_mirror_bg"/>

    <RadioGroup
        android:id="@+id/note_book_tool_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/resource_search_edit"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/resource_show_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/resource_show_image_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/resource_show_divider"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/resource_img"
            android:textColor="@color/note_hign_brown" />

        <RadioButton
            android:id="@+id/resource_show_video_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/resource_show_video_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/resource_show_divider"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/resource_video"
            android:textColor="@color/note_hign_brown" />

        <RadioButton
            android:id="@+id/resource_show_doc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/resource_show_doc_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/resource_show_divider"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/resource_doc"
            android:textColor="@color/note_hign_brown" />

        <RadioButton
            android:id="@+id/resource_show_redio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/resource_show_redio_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/resource_show_divider"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/resource_redio"
            android:textColor="@color/note_hign_brown" />

    </RadioGroup>

    <Button
        android:id="@+id/resource_back_btn"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back" />

    <GridView
        android:id="@+id/resource_gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/note_book_tool_linear"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:background="#00000000"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:verticalSpacing="30dp" />

    <TextView
        android:id="@+id/resource_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/resource_back_btn"
        android:text="@string/myresourse"
        android:textColor="@color/note_hign_brown"
        android:textSize="20sp" />

</RelativeLayout>