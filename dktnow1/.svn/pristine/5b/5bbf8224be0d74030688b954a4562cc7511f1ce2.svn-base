<include file="Public:header"/>
<load href="__PUBLIC__/Css/Ilc/lead.css"/>
<load href="/Public/Js/Public/public.js"/>
<script>
$(function(){
    $('.colu_carte li').eq(8).addClass('car_click').siblings().removeClass('car_click');
    //表格排列
    var dateWidth = {'data_check':'2%','data_id':'8%','data_name':'20%','data_column':'12%','data_pattern':'8%','data_size':'8%','data_date':'14%','data_tran':'8%','data_state':'8%','data_upload':'8%'};
    setWidth(dateWidth);

    //checkbox 按钮
    $('input[name=allcheck]').click(function(){
        
        if($(this).is(':checked')){
            $('.data_main .data_check').prop('checked',true)
        }else{
            $('.data_main .data_check').prop('checked',false)
        }
    })
})
function chk() {console.log();
    var str = $.trim($('input[name=scan]').val());
    if (str == '') {
        showMessage('请填写设置资源导入目录');
        return false;
    } else if (str.indexOf('/') == -1) {
        //showMessage('请填写正确的资源导入目录');
        //return false;
    }
    $('input[name=dir]').val(str);
}
</script>
<div class="warp">
<include file="Public:left"/>
<div class="colu_right">
    <ul class="colu_carte">
        <volist name="secondList" id="selist">
            <li attr="{$selist['sn_name']}" <eq name="selist.sn_name" value="ResourceImport">class="car_click"</eq>><a href="__APPURL__{$selist['sn_url']}">{$selist['sn_title']}</a></li>
        </volist>
    </ul>
    <div class="colu_arrow ResourceImport">
        <image src="__APPURL__/Public/Images/Ilc/resource_arrow.png"/>
    </div>
    <div class="colu_main lead_center">
        <div class="lead_main">
            <label>设置资源导入目录</label>
            <input type="text" value="" name="scan"/>
        </div>
        <div class="importFile">
            <h3>导入文件</h3>
            <span>注意：只允许xls文件上传，不支持高版本xlsx</span>
            <form  METHOD="POST" action="__URL__/upload" enctype="multipart/form-data" onsubmit="return chk();">
                教师数据来源&nbsp&nbsp&nbsp&nbsp<input type="file" name="file"><br/>
                <input type="hidden" name="dir"/>
                <button class="submitBtn" type="submit" value="">扫描</button>
            </form>
        </div>
    </div>
</div>
</div>