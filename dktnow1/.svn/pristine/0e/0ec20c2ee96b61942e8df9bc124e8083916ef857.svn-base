.group_right{
   width:764px;
   padding-top:25px;
}
.group_right ul li{
   float:left;
   width:150px;
   height:46px;
   line-height:46px;
   text-align:center;
   color:#99999d;
   font-size:16px;
}
.group_right ul li.group_hover{
   background:url("/apps/study/Public/Images/Home/group_li.png") no-repeat 65px 37px;
   color:#080808;
}
.group_right a.group_add{
   display:block;
   width:76px;
   height:38px;
   line-height:38px;
   padding-left:50px;
   border:1px solid #e5e5e5;
   background:url("/apps/study/Public/Images/Home/lesson.png") no-repeat -120px -38px;
   color:#555555;
   font-size:14px;
}
.group_right a.group_add:hover{
   background-position:-121px 0px;
}
.group_center{
   width:762px;
   min-height:845px;
   padding-top:19px;
   border:1px solid #cdcdcd;
   border-top:none;
   background:#f2f2f2;
}
.group_content{
   float:left;
   width:241px;
   height:102px;
   padding:13px 0px 0px 13px;
   margin:-1px 0px 0px -1px;
   border:1px solid #e1e1e1;
   border-right:none;
}
.group_content div{
   padding:30px 0px 0px 8px;
   _width:137px;
}
.group_content div p{
   color:#2c2c2c;
   font-size:16px;
}
.group_content div a{
   display:inline;
   float:left;
   margin:5px 10px 0px 0px;
   color:#a3a3a3;
   font-size:14px;
   overflow:hidden;
   _margin-right:8px;
}
.group_content div a:hover{
   color:#3aba6e;
}
/*群组成员*/
#member_header li{
   width:178px;
   height:65px;
   line-height:55px;
}
#member_header li.group_hover{
   background:url("/apps/study/Public/Images/Home/group_li.png") no-repeat 83px 56px;
}
.member_title{
   padding:7px 0px 0px 4px;
}
.group_right .member_title li{
   float:left;
   width:123px;
   height:63px;
   line-height:63px;
   margin-left:3px;
   text-align:center;
   background:#c6e4c9;
   color:#17974b;
}
.group_right .member_title li.member_leagure{
   background:url("/apps/study/Public/Images/Home/group_members.jpg") no-repeat 0px 0px;
   color:#fff;
}
.member_tab{
   width:100%;
   padding-top:24px;
}
.member_tab .group_content div{
   padding-top:15px;
}
.member_tab .group_content a{
   margin:2px 0px 0px 15px;
   color:#3aba6e;
}
.member_tab .group_content a.memeber_headman{
   color:#c95858;
}
/*select开始*/
.member_tab .group_content .mod_select{
   padding:0px
}
.mod_select .mod_ul li{
   width:90px;
    list-style-type:none;
    float:left;
    margin:10px 0px 0px 0px;
    height:39px;
}
.member_tab .group_content div.select_box{
   padding-top:0px;
    float:left;
    color:#444;
    position:relative;
    cursor:pointer;
    width:80px;
    font-size:12px;
    height:39px;
   line-height:39px;
    background:url("/apps/study/Public/Images/Home/group_members.jpg") no-repeat -0px -63px;
}
.member_tab .group_content .selet_open{
    display:inline-block;
    position:absolute;
    right:0;
    top:0;
    width:30px;
    height:39px;
   margin:0px;
}
.member_tab .group_content div.select_box span.select_txt{
    display:inline-block;
    padding-left:6px;
    width:74px;
    line-height:39px;
    height:39px;
    cursor:text;
    overflow:hidden;
    color:#727272;
    font-family:"宋体",SimSun;
    font-size:12px;
   text-align:left;

}
.member_tab .group_content div div.option{
    border:solid 1px #e3e3e3;
    position:absolute;
    top:39px;
    left:0px;
    z-index:2;
    overflow:hidden;
    display:none;
    border-top:none;
   padding:0px;
   _width:86px;
}
.member_tab .group_content div div.option a{
    display:block;
    height:26px;
    line-height:26px;
    text-align:left;
    padding:0 10px;
    width:100%;
    background:#fff;
    color:#727272;
    font-family:"宋体",SimSun;
    font-size:12px;
   margin:0px;
}
.member_tab .group_content div div.option a:hover{
    background:#c6c6c6;
}
/*select结束*/
.member_tab .group_content .group_append{
   width:48px;
   height:48px;
   margin:20px auto;
   margin-bottom:10px;
   background:url("/apps/study/Public/Images/Home/group_members.jpg") no-repeat -88px -63px;
}
.member_tab .group_content center{
   color:#dfdfdf;
   font-size:14px;
}
/*群组动态*/
.member_tab .trends_content li{
   float:left;
   width:100%;
   height:85px;
   padding-top:25px;
   border-bottom:1px dashed #DCD9D5;
}
.member_tab .trends_content li img{
   float:left;
   margin:0px 15px 0px 27px;
}
.member_tab .trends_content li p{
   line-height:25px;
   color:#A6A29D;
   font-size:14px;
   text-align:left;
}
.member_tab .trends_content li p span{
   color:#6781A8;
}
.member_tab .trends_content li p cite{
   padding-left:12px;
}
#trends_title{
   padding-bottom:48px;
   position:relative;
}
#trends_title a.trends_click{
   position:absolute;
   left:0px;
   bottom:0px;
   display:block;
   width:100%;
   height:48px;
   line-height:48px;
   text-align:center;
   color:#6781A8;
   font-size:14px;
}
/*侯祯怿 5-21*/
.foot_bot,.foot_top{
   width:1000px;
   border-bottom:1px solid #b2b2b2;
   margin:0 auto;
   margin-top:10px;
   font-size:0px;
   line-height:0px;
}
.foot_top{
   border-bottom:1px solid #e8e8e8;
   margin-top:0px;
}