        <li onclick="javascript:location.href='__URL__/syllabus/id/{$class.c_id}'">课程表</li>

    </ul>
    <div class="creat_c_mainBox stu_cre">
        <div class="stu_main">
            <volist name="auth" id="auth">
                <div class="group_content">
                    <div class="stu_message">
                        <a>编辑</a>
                    </div>
                    <img src="{$auth.a_avatar|getAuthAvatar=$auth['a_type'],$auth['a_sex'],96}" class="fl"/>
                    <div class="fl">
                        <p class="stu_bold">{$auth.a_nickname}</p>
                        <p>智慧豆：{$auth.a_bean|intval}</p>
                    </div>
                </div>
            </volist>
        </div>
    </div>
