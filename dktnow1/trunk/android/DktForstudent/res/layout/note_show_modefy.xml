<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/view_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notes_show_bg" >

    <RelativeLayout
        android:id="@+id/view_media"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="55dp"
        android:background="@android:color/transparent" 
        />
    <RelativeLayout 
	    android:id="@+id/note_canvas"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	>
	  	
		<dkt.student.view.MainView
			android:layout_marginTop="55dp"
            android:id="@+id/note_canvas_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
            
        <RelativeLayout
            android:id="@+id/class_left_activity_linear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            	<Button
		        android:id="@+id/note_book_back_btn"
		        android:layout_width="60dp"
		        android:layout_height="37dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginTop="8dp"
		        android:background="@drawable/back" />
		    	<RadioGroup
		        android:id="@+id/note_book_tool_linear"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		
		        <RadioButton
		            android:id="@+id/note_book_change_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:button="@null"
		            android:background="@drawable/note_change_selector" />
		
		        <RadioButton
		            android:id="@+id/note_book_insert_btn"
		            android:layout_width="wrap_content"
		            android:button="@null"
		            android:layout_height="wrap_content"
		            android:background="@drawable/note_insert_selector" />
		
		        <RadioButton
		            android:id="@+id/note_book_clear_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:button="@null"
		            android:background="@drawable/note_clear_selector" />
		    	</RadioGroup>
		    	
        </RelativeLayout>
        <LinearLayout
	        android:id="@+id/note_book_page_linear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="20dp"
	        android:layout_marginBottom="15dp"
	        android:layout_alignParentRight="true" >
	
	        <ImageButton
	            android:id="@+id/note_book_pre_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_pre_selector"
	            android:padding="20dp"
	            android:background="#00000000" />
	
	        <TextView
	            android:id="@+id/note_book_page_txt"
	            android:layout_width="70dp"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="" />
	
	        <ImageButton
	            android:id="@+id/note_book_next_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_next_selector"
	               android:padding="20dp"
	            android:background="#00000000"  />
  		</LinearLayout>
  		<TextView 
		    android:id="@+id/main_focus"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="380dp"
		    android:layout_marginTop="230dp"
		    android:visibility="invisible"/>
  	</RelativeLayout>
	
</RelativeLayout>