<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="70dp"
    >
    
	<RelativeLayout android:id="@+id/blackboard_listview_re"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="4dp"
	    android:layout_marginLeft="20dp"
	    android:background="@drawable/blackboard_resource_item_bg"
	    >
	    <ImageView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerHorizontal="true"
	    	android:id="@+id/blackboard_listview_img"/>
	    
	    <TextView android:id="@+id/blackboard_activity_name"
	        android:layout_below="@+id/blackboard_listview_re"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="活动展示一"
	    	android:textColor="@color/green"
	    	android:layout_centerHorizontal="true"
	    	android:layout_alignParentBottom="true"
	    	android:layout_marginBottom="2dp"/>
	    
	</RelativeLayout>
	
</RelativeLayout>