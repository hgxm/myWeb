<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/student_gridview_item_bg" >

    <ImageView android:id="@+id/student_img"
        android:layout_width="60dp"
    	android:layout_height="60dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="10dp"/>
    
	<TextView android:id="@+id/student_name"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/student_img"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="20dp"
    	android:textSize="15sp"
    	android:textColor="@color/black"/>
	
	<TextView android:id="@+id/student_online"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/student_img"
    	android:layout_below="@+id/student_name"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="8dp"
    	android:textSize="15sp"
    	android:textColor="@color/green"/>
	
	<Button android:id="@+id/student_yanshi"
	    android:layout_width="wrap_content"
    	android:layout_height="30dp"
    	android:layout_below="@+id/student_img"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="8dp"
    	android:background="@drawable/student_gridview_item_btn_bg"
    	android:textSize="18sp"
    	android:textColor="@color/black"
    	android:text="授权演示"/>
	
	<Button android:id="@+id/student_jiep"
	    android:layout_width="wrap_content"
    	android:layout_height="30dp"
    	android:layout_below="@+id/student_img"
    	android:layout_toRightOf="@+id/student_yanshi"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="8dp"
    	android:textSize="18sp"
    	android:textColor="@color/black"
    	android:background="@drawable/student_gridview_item_btn_bg"
    	android:text="截屏"/>
</RelativeLayout>