<include file="../Public/header_main" />
<load file="__PUBLIC__/Css/Ilc/resource_index.css"/>
<script type="text/javascript">
$(function(){
 var listObj = {"data_check": "2%","data_id": "8%" ,"data_name": "20%","data_explain": "14%","data_default": "14%","data_sort": "12%","data_status": "12%","data_hand": "10%","data_edit": "4%","data_add": "8%","data_child": "8%"};
 setWidth(listObj);
})

function child(id){
    location.href = URL+"/index/t_pid/"+id;
}

function add(id) {
    location.href = URL+"/add/t_pid/"+id;
}
</script>
    <form name="form" method="post" action="__URL__">
        <div class="model_search model_model">
            <a>账号：</a>
            <input TYPE="text" title="名称查询" name="u_account" >
            <a>昵称：</a>
            <input TYPE="text" title="名称查询" name="u_nickname" >
            <a class="search">搜索</a>
        </div>
    </form>
    <div class="tools fl">
        <a class="add">
            <i></i>
            新增
        </a>
        <a class="edit">
            <i></i>
            编辑
        </a>
        <a class="del">
            <i></i>
            删除
        </a>
    </div>
    <div id="system_list">
        <div>
            <ul class="list_hea">
                <li>
                    <input class="data_check" type="checkbox" name="allcheck" onclick="CheckAll('system_list')"/>
                    <span class="data_id">编号</span>
                    <span class="data_name">用户名</span>
                    <span class="data_explain">昵称</span>
                    <span class="data_status">添加时间</span>
                    <span class="data_default">上次登陆</span>
                    <span class="data_hand">操作</span>
                </li>
            </ul>
        </div>
        <div>
            <ul class="list_list list_hea" id="list_main">

                <volist name="list" id="list">
                    <li>
                        <input class="data_check" type="checkbox" value="{$list.u_id}" name="key"/>
                        <span class="data_id">{$list.u_id}</span>
                        <span class="data_name">{$list.u_account}</span>
                        <span class="data_explain">{$list.u_nickname}</span>
                        <span class="data_status">{$list.u_created|toDate='Y-m-d H#i#s'}</span>
                        <span class="data_default">{$list.u_last_login_time|toDate='Y-m-d H#i#s'}</span>
                        <span class="data_hand"><a href="javascript:edit({$list.u_id})">编辑</a></span>
                    </li>
                </volist>

            </ul>
        </div>
        <div class="page">
            {$page}
        </div>
    </div>
