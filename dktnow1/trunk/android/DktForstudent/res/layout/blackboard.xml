<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_top"
    android:background="@color/text_background_color">
	
    <RelativeLayout
        android:id="@+id/view_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/note_canvas"
	  	android:layout_width="match_parent"
	  	android:layout_height="match_parent">
	  	
	    <dkt.student.view.MainView 
			android:id="@+id/note_canvas_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	   	
	    <RelativeLayout
	        android:id="@+id/class_left_activity_re"
	        android:layout_width="84dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/blackboard_right_bg"     
	         >
	         <Button
	            android:id="@+id/blackboard_back_btn"
	            android:layout_width="60dp"
        		android:layout_height="37dp"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/back" />
        	<RadioGroup
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@+id/blackboard_back_btn"
	            android:orientation="vertical" >

	            <RadioButton
	                android:id="@+id/blackboard_pen_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:drawableTop="@drawable/pen_bg"
	                android:text="画笔" />
	
	            <RadioButton
	                android:id="@+id/blackboard_eraser_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:drawableTop="@drawable/eraser_bg"
	                android:text="橡皮" />
	            
	            <RadioButton
	                android:id="@+id/blackboard_draft_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:drawableTop="@drawable/draft_bg"
	                android:text="草稿" />
	            
	
	            <RadioButton
	                android:id="@+id/blackboard_student_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:drawableTop="@drawable/student_bg"
	                android:text="笔记" />
	
	            <RadioButton
	                android:id="@+id/blackboard_handwriting_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:drawableTop="@drawable/handwriting_bg"
	                android:text="板书" />
	            
				<RadioButton
	                android:id="@+id/blackboard_save_btn"
	                style="@style/main_tab_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="18dp"
	                android:layout_marginBottom="20dp"
	                android:drawableTop="@drawable/save_bg"
	                android:text="保存" />
        	</RadioGroup>
       	</RelativeLayout>
       	<RelativeLayout
	        android:id="@+id/class_popu_re"
	        android:layout_width="820dp"
	        android:layout_height="660dp"
	        android:orientation="vertical"
	        android:layout_marginLeft="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/balckboard_change_re_bg"     
	         >
        	<TextView android:id="@+id/class_popu_text"
        	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_centerHorizontal="true"
	        	android:text="课堂练习"
	        	android:layout_marginTop="10dp"
	        	android:textColor="@color/black"
	        	android:textSize="20sp"/>
        	<Button android:id="@+id/class_popu_close"
        	    android:layout_width="74dp"
	        	android:layout_height="33dp"
	        	android:layout_alignParentRight="true"
	        	android:layout_marginRight="10dp"
	        	android:background="@drawable/close_bl"/>
        	<TextView 
			    android:layout_width="770dp"
		    	android:layout_height="1dp"
		    	android:layout_marginLeft="40dp"
		    	android:layout_marginTop="10dp"
		    	android:layout_below="@+id/class_popu_close"
		    	android:id="@+id/class_dis_text"
		    	android:background="@color/el"/>
        	<RelativeLayout android:id="@+id/blackboard_change_re"
        	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="80dp"
	        	android:layout_below="@+id/class_dis_text">
        	    
        	</RelativeLayout>
        	
       	</RelativeLayout>
       	<Button
            android:id="@+id/blackboard_retractable_btn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
			android:layout_marginLeft="20dp"
            android:background="@drawable/retractable_no" />
       
        <RelativeLayout
		    android:id="@+id/class_tool_relative"
	        android:layout_width="986dp"
	        android:layout_height="80dp"
	        android:layout_alignParentBottom="true"
			android:layout_marginLeft="20dp"	        
	        android:layout_toRightOf="@+id/blackboard_retractable_btn"
	        android:background="@drawable/blackboard_top_bg">
		        
            <Button 
                android:layout_width="43dp"
            	android:layout_height="43dp"
            	android:id="@+id/blackboard_activity"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="15dp"
            	android:background="@drawable/blackboard_activity_bg"/>
            
	        <dkt.student.view.HorizontalListView
	            android:layout_toRightOf="@+id/blackboard_activity"
	            android:id="@+id/blackboard_listview"
	            android:layout_width="900dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginLeft="15dp"
	            android:layout_height="wrap_content" />
		    <dkt.student.view.HorizontalListView
	            android:layout_toRightOf="@+id/blackboard_activity"
	            android:id="@+id/blackboard_resource_listview"
	            android:layout_width="900dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginLeft="15dp"
	            android:visibility="gone"
	            android:layout_height="wrap_content" />    
		</RelativeLayout>
       	<LinearLayout
	        android:id="@+id/note_book_page_linear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="20dp"
	        android:layout_marginBottom="5dp"
	        android:layout_alignParentRight="true" >
	
	        <ImageButton
	            android:id="@+id/note_book_pre_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_pre_selector"
	            android:padding="20dp"
	            android:background="#00000000" />
	
	        <TextView
	            android:id="@+id/note_book_page_txt"
	            android:layout_width="70dp"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="第 1/1页" />
	
	        <ImageButton
	            android:id="@+id/note_book_next_page"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/note_next_selector"
	               android:padding="20dp"
	            android:background="#00000000"  />
	    </LinearLayout> 
