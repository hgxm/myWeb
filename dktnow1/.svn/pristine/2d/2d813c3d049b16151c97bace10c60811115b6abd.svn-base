<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	
    <LinearLayout android:id="@+id/ex_f_li"
        android:layout_width="703dp"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	
        <TextView
	        android:id="@+id/exercise_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="填空题:"
        	android:layout_marginLeft="15sp"
        	android:layout_marginTop="10dp"
       		android:textColor="#ff375c6c"
        	android:textSize="18sp" />
        <ImageView
	        android:id="@+id/exercise_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
        	android:layout_marginTop="8dp" />
   	</LinearLayout>	
   	
	<TextView
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="695dp"
        android:layout_toRightOf="@+id/ex_f_li"
        android:background="#ffe0e0e0" />
	
	<RelativeLayout android:id="@+id/ex_s_li"
        android:layout_width="575dp"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/divider1"
    	android:orientation="vertical">
	    
	    <TextView android:id="@+id/student_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginTop="45dp"
	        android:text="学生答案:"
	        android:textColor="#ff375c6c"
	        android:textSize="18sp" />
	    
	    <LinearLayout
	        android:id="@+id/exercise_full_linear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	       	android:layout_below="@+id/student_text"
	        android:layout_marginLeft="80dp"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical"
	        android:layout_marginRight="20dp"
	        android:paddingLeft="5dp" >
	
	        <LinearLayout
	            android:id="@+id/exercise_full_linear1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/exercise_icon_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="(1)" />
	
	            <EditText
	                android:id="@+id/exercise_edit"
	                android:layout_width="fill_parent"
	                
	                android:layout_height="wrap_content" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/exercise_full_linear2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/exercise_icon_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="(2)" />
	
	            <EditText
	                android:id="@+id/exercise_edit"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />
	        </LinearLayout>
	    </LinearLayout>
	   	<TextView android:id="@+id/teacher_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/exercise_full_linear"
	        android:layout_marginLeft="30dp"
	        android:layout_marginTop="25dp"
	        android:text="正确答案:"
	        android:textColor="@color/green"
	        android:textSize="18sp" />
        <Button 
	        android:layout_width="575dp"
	    	android:layout_height="695dp"
			android:background="@color/transparent1" />
    </RelativeLayout>

</RelativeLayout>