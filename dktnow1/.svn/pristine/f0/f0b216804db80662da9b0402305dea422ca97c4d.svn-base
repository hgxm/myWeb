#import "RichengCell.h"

@implementation RichengCell
@synthesize delegate;
- (id)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier
{
    self = [super initWithStyle:style reuseIdentifier:reuseIdentifier];
    if (self) {
        // Initialization code
        arrColors = [[NSArray alloc]initWithObjects:@"s1.png",@"s2.png",@"s3.png",@"s4.png",nil];
        
        imageview = [[UIImageView alloc]initWithFrame:CGRectMake(0, 0, 892,44)];
        [self addSubview:imageview];
        [imageview release];
        
        timeLbl = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, 72, 44)];
        timeLbl.backgroundColor = [UIColor clearColor];
        timeLbl.font = [UIFont systemFontOfSize:15];
        timeLbl.textAlignment = NSTextAlignmentCenter;
        timeLbl.text = @"7:00";
        timeLbl.textColor = [UIColor colorWithRed:94.0/255 green:91.0/255 blue:84.0/255 alpha:1];
        [self addSubview:timeLbl];
        [timeLbl release];
        

        for (int i=0; i<7; i++) {
            
            int x = arc4random() % 4;
            UIButton *btn = [[UIButton alloc] initWithFrame:CGRectMake(73+i*117, 1, 117, 44)];
            if (x==3) {
                
                int y = arc4random() % 4;

                //btn.backgroundColor = [arrColors objectAtIndex:y];
                [btn setBackgroundImage:[UIImage imageNamed:[arrColors objectAtIndex:y]] forState:UIControlStateNormal];

                [btn setTitle:@"初一数学" forState:UIControlStateNormal];

            }
            
            [btn addTarget:self action:@selector(richengBtnClicks:) forControlEvents:UIControlEventTouchUpInside];
            [btn.titleLabel setFont:[UIFont boldSystemFontOfSize:15]];
            [btn setTitleColor:[UIColor colorWithRed:94.0/255 green:91.0/255 blue:84.0/255 alpha:1] forState:UIControlStateNormal];
            [self addSubview:btn];
            [btn release];
        }
    }
    return self;
}
-(void)richengBtnClicks:(UIButton *)btn{
    
    if (delegate&&[delegate respondsToSelector:@selector(clickRichengLesson:)]) {
        
        [delegate clickRichengLesson:nil];
    }
}
-(void)changeContent:(NSMutableDictionary *)muDict row:(int)myRow count:(int)total{
    if (myRow<total-1) {
        imageview.image = [UIImage imageNamed:@"002.png"];

    }else{
        imageview.image = [UIImage imageNamed:@"003.png"];

    }
    
}
- (void)setSelected:(BOOL)selected animated:(BOOL)animated
{
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

@end
