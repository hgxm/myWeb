        <RelativeLayout android:id="@+id/course_curr_layout"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
			<RelativeLayout
		        android:id="@+id/course_relative"
		        android:layout_width="match_parent"
		        android:layout_height="185dp">
		        
		        <dkt.teacher.view.HorizontalListView
		            android:id="@+id/course_listview"
		            android:layout_width="1187dp"
		            android:layout_height="wrap_content" 
		            android:layout_centerInParent="true"
		            android:layout_marginTop="20dp"
		            android:layout_marginLeft="80dp"
		            android:layout_marginBottom="5dp"/>
		        
		    </RelativeLayout>
		    <TextView android:id="@+id/course_textview"
		         android:layout_width="match_parent"
			     android:layout_height="1dp"
			     android:layout_marginLeft="10dp"
			     android:layout_marginRight="10dp"
			     android:layout_below="@+id/course_relative"
			     android:background="@color/el"/>
		    <LinearLayout 
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:orientation="horizontal" 
			     android:layout_marginTop="1dp"
			     
			     android:layout_below="@+id/course_textview"
			     >
		        
		        <android.support.v4.view.ViewPager
		            xmlns:android="http://schemas.android.com/apk/res/android"
		            android:id="@+id/view_pager"
		            android:layout_width="975dp"
		            android:layout_height="fill_parent" />
		        <!--  android:background="@drawable/course_class_lesson_bg"android:background="@drawable/course_class_hour_bg"			    	
			    	 -->
		        <TextView 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@drawable/course_lr"
		            />
		        
		        <GridView    
				    android:id="@+id/course_class_hour_gridview"  
				    android:layout_width="wrap_content"   
				    android:layout_height="fill_parent"  
				    android:numColumns="auto_fit"  
				    android:verticalSpacing="25dp"  
				    android:horizontalSpacing="10dp"  
				    android:columnWidth="180dp"  
				    android:stretchMode="columnWidth"  
				    android:gravity="center"  
				    android:layout_marginLeft="10dp"
				    android:layout_marginRight="10dp"
				    android:layout_marginTop="25dp"
				/>
		    </LinearLayout>
			
    	</RelativeLayout>
    	
