#import "BianlunCell.h"

@implementation BianlunCell

- (id)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier
{
    self = [super initWithStyle:style reuseIdentifier:reuseIdentifier];
    if (self) {
        // Initialization code
        
        headImage = [[UIImageView alloc] initWithFrame:CGRectMake(20, 15, 48, 48)];
        headImage.backgroundColor = [UIColor clearColor];
        headImage.image = [UIImage imageNamed:@"test.png"];
        [self addSubview:headImage];
        [headImage release];
        
        
        lblName = [[UILabel alloc] initWithFrame:CGRectMake(75, 20, 80, 25)];
        lblName.text = @"王燕英子";
        lblName.backgroundColor = [UIColor clearColor];
        lblName.textColor = [UIColor orangeColor];
        lblName.textAlignment = NSTextAlignmentLeft;
        lblName.font = [UIFont systemFontOfSize:16];
        [self addSubview:lblName];
        [lblName release];
        
        
        lblTime = [[UILabel alloc] initWithFrame:CGRectMake(155, 20, 80, 25)];
        lblTime.text = @"2013-7-9";
        lblTime.textAlignment = NSTextAlignmentLeft;
        lblTime.textColor = [UIColor lightGrayColor];
        lblTime.font = [UIFont systemFontOfSize:14];
        lblTime.backgroundColor = [UIColor clearColor];
        [self addSubview:lblTime];
        [lblTime release];
        
        btnComment = [[UIButton alloc] initWithFrame:CGRectMake(530, 20, 30, 30)];
        btnComment.backgroundColor = [UIColor clearColor];
        [btnComment setImage:[UIImage imageNamed:@"bl评论.png"] forState:UIControlStateNormal];
        [btnComment addTarget:self action:@selector(btnCommentAction:) forControlEvents:UIControlEventTouchUpInside];
        [self addSubview:btnComment];
        [btnComment release];
        
        btnDele = [[UIButton alloc] initWithFrame:CGRectMake(580, 20, 30, 30)];
        btnDele.backgroundColor = [UIColor clearColor];
        [btnDele setImage:[UIImage imageNamed:@"bl删除.png"] forState:UIControlStateNormal];
        [btnDele addTarget:self action:@selector(btnDeleAction:) forControlEvents:UIControlEventTouchUpInside];
        [self addSubview:btnDele];
        [btnDele release];
        
        lblContent = [[UILabel alloc] initWithFrame:CGRectMake(75, 55, 560, 100)];
        lblContent.text = @"“测评-定计划-学习”三位一体，大课堂网校提供不同学科、不同难度级别的习题进行组卷、测试，在线反馈测试结果。让家长对自己孩子的学习一目了然，大课堂网校针对性为您孩子的培养制定学习计划，让孩子有针对性的获得学习的支持和服务。";
        lblContent.textColor = [UIColor grayColor];
        lblContent.backgroundColor = [UIColor clearColor];
        lblContent.numberOfLines = 0;
        [self addSubview:lblContent];
        [lblContent release];
        
        for (int i=0; i<2; i++) {
            
            
            UIButton *btn = [[UIButton alloc] initWithFrame:CGRectMake(450+i*100, 160, 90, 23)];
            btn.tag = i+10;
            btn.backgroundColor = [UIColor clearColor];
            [self addSubview:btn];
            [btn release];
            [btn addTarget:self action:@selector(btnSelect:) forControlEvents:UIControlEventTouchUpInside];
            btn.imageEdgeInsets = UIEdgeInsetsMake(0, -20, 0, 0);
            
            [btn setTitle:@"(100)" forState:UIControlStateNormal];
            switch (i) {
                case 0:
                     [btn setImage:[UIImage imageNamed:@"bl鸡蛋.png"] forState:UIControlStateNormal];
                    break;
                case 1:
                    [btn setImage:[UIImage imageNamed:@"bl花.png"] forState:UIControlStateNormal];
                    break;
                default:
                    break;
            }
           
                    
                  
            [btn setTitleColor:[UIColor colorWithRed:188.0/255 green:179.0/255 blue:164.0/255 alpha:1] forState:UIControlStateNormal];
            btn.titleLabel.font = [UIFont boldSystemFontOfSize:14];
            
        }
        
        UIImageView *backImage = [[UIImageView alloc] initWithFrame:CGRectMake(10, 0, 640, 190)];
        UIImage *image = [UIImage imageNamed:@"板书列表背景.png"];
        image = [image stretchableImageWithLeftCapWidth:10 topCapHeight:10];
        backImage.image = image;
        [self addSubview:backImage];
        [backImage release];
        
        [self sendSubviewToBack:backImage];
    }
    return self;
}
