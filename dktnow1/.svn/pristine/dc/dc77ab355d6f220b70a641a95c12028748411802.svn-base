#import "AnsImageViewController.h"
#import "StartViewController.h"
@interface AnsImageViewController ()

@end

@implementation AnsImageViewController
@synthesize muArr;
@synthesize startVc;
@synthesize whichOne;
- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
    }
    return self;
}
-(void)btnBackAction{
    
    CATransition *transition = [CATransition animation];
    transition.duration = 0.5;
    transition.timingFunction = [CAMediaTimingFunction functionWithName:kCAMediaTimingFunctionEaseInEaseOut];
    [transition setType:@"zoomyIn"];
    transition.subtype = kCATransitionFromRight;
    [self.navigationController.view.layer addAnimation:transition forKey:nil];
    [self.navigationController popViewControllerAnimated:NO];

}
- (void)viewDidLoad
{
    [super viewDidLoad];
    
    self.view.backgroundColor =[ UIColor whiteColor];
    
    mainScroll = [[UIScrollView alloc] initWithFrame:CGRectMake(0, 55, 1024, 748-55)];
    [mainScroll setShowsHorizontalScrollIndicator:NO];
    mainScroll.delegate = self;
    [mainScroll setPagingEnabled:YES];
    [self.view addSubview:mainScroll];
    [mainScroll release];
    
    infoLabel.textAlignment = NSTextAlignmentCenter;
    infoLabel.text = @"简答题图片";
    
    for (int i=0; i<[muArr count]; i++) {
        
        UIView *backView = [[UIView alloc]initWithFrame:CGRectMake(i*1024, 0, 1024, 748-55)];
        backView.userInteractionEnabled = YES;
        [mainScroll addSubview:backView];
        [backView release];
        
        ImgDownSelf *img = [[ImgDownSelf alloc]initWithFrame:CGRectMake(1024/2-894/2, (748-55)/2-450/2-50, 894, 450)];
        [img setImgUrl:[muArr objectAtIndex:i]];
        img.myImgDelegate = self;
        [backView addSubview:img];
        [img release];
        
        img.layer.borderColor = MYCOLOR.CGColor;
        img.layer.borderWidth = 2;
        img.layer.masksToBounds = YES;
    }
    [mainScroll setContentSize:CGSizeMake(1024*[muArr count], 748-55)];
    
   
    
    UIImageView *stateImage = [[UIImageView alloc]initWithFrame:CGRectMake(0, 748-50, 1024, 55)];
    stateImage.image = [UIImage imageNamed:@"顶栏.png"];
    [self.view addSubview:stateImage];
    [stateImage release];
    
    
    control = [[UIPageControl alloc]initWithFrame:CGRectMake(0, 710, 748, 20)];
    [control setBackgroundColor:[UIColor clearColor]];
    [control setNumberOfPages:[muArr count]];
    [control setCurrentPage:0];
    [self.view addSubview:control];
    [control release];
    
    [mainScroll setContentOffset:CGPointMake(whichOne*1024, 0)];
    [control setCurrentPage:whichOne];

	// Do any additional setup after loading the view.
}
-(void)singeclick:(NSMutableDictionary *)_muDict{
    
    int index = (int)mainScroll.contentOffset.x/1024;
    NSLog(@"indext is %d",index);
    NSString *strURL = [muArr objectAtIndex:index];
    [startVc insert:strURL];
    
    
    CATransition *transition = [CATransition animation];
    transition.duration = 0.5;
    transition.timingFunction = [CAMediaTimingFunction functionWithName:kCAMediaTimingFunctionEaseInEaseOut];
    [transition setType:@"zoomyIn"];
    transition.subtype = kCATransitionFromRight;
    [self.navigationController.view.layer addAnimation:transition forKey:nil];
    [self.navigationController popViewControllerAnimated:NO];
}
-(void)dealloc{
    
    [muArr release];
    [startVc release];
    [super dealloc];
}
- (void)scrollViewDidScroll:(UIScrollView *)scrollView{
    
    int number = scrollView.contentOffset.x/1024;
    [control setCurrentPage:number];
}

#if __IPHONE_OS_VERSION_MAX_ALLOWED >= __IPHONE_6_0

-(NSUInteger)supportedInterfaceOrientations
{
    return UIInterfaceOrientationMaskLandscape;
}

- (BOOL)shouldAutorotate {
    return YES;
}

#endif


// Override to allow orientations other than the default portrait orientation.
- (BOOL)shouldAutorotateToInterfaceOrientation:(UIInterfaceOrientation)interfaceOrientation
{
    // Return YES for supported orientations
    return (interfaceOrientation == UIInterfaceOrientationLandscapeLeft  ||
            interfaceOrientation == UIInterfaceOrientationLandscapeRight);
    
}
- (void)didReceiveMemoryWarning
{
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

@end
