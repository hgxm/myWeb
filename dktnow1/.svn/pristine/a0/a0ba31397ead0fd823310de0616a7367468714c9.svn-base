<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homework_student_bg" >

    <ImageView android:id="@+id/student_img"
        android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="7dp"
    	/>
    
	<TextView android:id="@+id/student_name"
	    android:layout_width="80dp"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/student_img"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="3dp"
    	android:textSize="18sp"
    	android:textColor="@color/black"
	    android:text="五柳村长"/>
	
	<ImageView android:id="@+id/student_read_img"
        android:layout_width="20dp"
    	android:layout_height="20dp"
    	android:layout_alignParentRight="true"
    	android:visibility="invisible"
    	android:src="@drawable/homework_read"/>
</RelativeLayout>