<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/tool_popu_bg" >

    <RadioGroup
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="60dp"
	    android:orientation="vertical" >
	    
	    <RadioButton
	        android:id="@+id/tool_graffiti_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:button="@null"
	        android:background="#00000000"
	        android:drawablePadding="2dp"
	        android:gravity="center"
	        android:drawableTop="@drawable/tool_graffiti_selector"                
	        android:text="@string/graffiti" 
	        android:textColor="@color/white"
	        android:textSize="12sp"/>
	   	<RadioButton
	        android:id="@+id/tool_recorder_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:button="@null"
	        android:background="#00000000"
	        android:drawablePadding="2dp"
	        android:gravity="center"
	        android:drawableTop="@drawable/tool_recorder_selector"                
	        android:text="@string/recorder" 
	        android:textColor="@color/white"
	        android:textSize="12sp"/>
	</RadioGroup>
	<RadioGroup
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="25dp"
	    android:orientation="vertical" >
	    
	    <RadioButton
	        android:id="@+id/tool_photograph_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:button="@null"
	        android:background="#00000000"
	        android:drawablePadding="2dp"
	        android:gravity="center"
	        android:drawableTop="@drawable/tool_photograph_selector"                
	        android:text="@string/photograph" 
	        android:textColor="@color/white"
	        android:textSize="12sp"/>
	   	<RadioButton
	        android:id="@+id/tool_note_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:button="@null"
	        android:background="#00000000"
	        android:drawablePadding="2dp"
	        android:gravity="center"
	        android:drawableTop="@drawable/tool_note_selector"                
	        android:text="@string/note" 
	        android:textColor="@color/white"
	        android:textSize="12sp"/>
	</RadioGroup>
</LinearLayout>