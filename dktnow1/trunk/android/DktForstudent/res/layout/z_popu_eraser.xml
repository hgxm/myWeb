<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/huanbi_bg_two" >

        <RelativeLayout
            android:id="@+id/head_relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/head_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="橡皮"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/huanbi_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_relative"
            >
            <ImageView 
	            android:id="@+id/eraser_width_image"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_below="@id/head_relative"
	            android:layout_marginTop="18dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="22dp"
	            android:scaleType="center"
	            android:src="@drawable/eraser_circle_bg"/>
        
        	<SeekBar
	            android:id="@+id/eraser_width_progress"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:layout_below="@id/head_relative"
	            android:layout_toLeftOf="@id/eraser_width_image"
	            android:layout_marginTop="35dp"
	            android:layout_marginLeft="18dp"
	            android:progress="50"
	            android:layout_marginRight="15dp"
	            android:progressDrawable="@drawable/seekbar_drawable"
	            android:thumb="@drawable/seekbar_thumb_bg"
	            android:thumbOffset="4dp"
	            android:max="100"/>
	            
            <Button
                android:id="@+id/black_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                 android:layout_marginTop="114dp"
                 android:layout_marginLeft="15dp"
                 android:background="@drawable/classwork_btn_bg"
                 android:text="清除全部"
                 android:textColor="@color/green"
                 />
                 <Button
                android:id="@+id/blue_btn"
                android:layout_width="100dp"
                android:layout_toRightOf="@+id/black_btn"
                android:layout_height="40dp"
                 android:layout_marginTop="114dp"
                 android:layout_marginLeft="10dp"
                 android:background="@drawable/classwork_btn_bg"
                 android:text="清除视图"
                 android:textColor="@color/green"
                 />
                 <Button
                android:id="@+id/red_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/blue_btn"
                 android:layout_marginTop="114dp"
                 android:layout_marginLeft="10dp"
                 android:text="清除笔迹"
                 android:background="@drawable/classwork_btn_bg"
                 android:textColor="@color/green"
                 />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>