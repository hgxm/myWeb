<include file="Public:header"/>
<load href="__PUBLIC__/Css/Home/mould_new.css"/>
<load href="__PUBLIC__/Css/Home/jquery-ui.css"/>
<load href="/Public/Js/Home/jquery-ui.js"/>
<script>
$(function(){
    var l_id = "{$Classhour.l_id}";
    var cl_id = "{$Classhour.cl_id}";
    var co_id = "{$Classhour.co_id}";

    // 切换li下 p 点击 tab 切换事件
    $(document).on('click','.main_new li p',function(){
        $(this).parent().addClass('new_click').siblings().removeClass('new_click');
        $(".new_tab>div").eq($(this).parent().index()-1).show().siblings().hide();
    })

    // 如果添加的课时数大于1，那么就默认选中第二个，否则就是本身
    var initNum = $('.main_new li').size() > 1 ? 1 : 0;
    $('.main_new p').eq(initNum).click();

	// 点击浏览
	$(document).on('click', '.main_join', function () {
        location.href = '__APPURL__/Tache/browse/taId/' + $('.main_new .new_click').attr('rel');
    })

})
</script>
<div class="warp">

<div id="main">
    <div class="main_hea fl">
        <a class="back" href="javascript:history.back();">返回</a>
        <a>{$unit}</a>
        <span>></span>
        <a>{$lesson.l_title}</a>
        <span>></span>
        <a class="hea_class">{$Classhour.cl_title}</a>
    </div>
    <div class="clear"></div>
    <div class="main_main">
        <ul class="main_new">
            <a href="javascript:void(0);" class="main_join">浏览</a>
            <volist name="tache" id="vo">
                <li rel="{$vo.ta_id}">
                    <p>{$vo.ta_title}</p>

                    <input type="text" value="{$vo.ta_title}"/>

                </li>
            </volist>
        </ul>
        <div class="clear"></div>
        <div class="new_tab">
            <volist name="tache" id="vo">
                <div class="temp_bottom">
                    <span class="temp_teach fl">教学活动</span>
                    <div class="temp_text fl">
                        <div class="temp_flex">

                            <volist name="vo.act_id" id="ho">
                                <div class="flex_add <if condition='$ho.act_type eq 1'>new_work</if><if condition='$ho.act_type eq 2'>add_blue</if><if condition='$ho.act_type eq 3'>add_act</if><if condition='$ho.act_type eq 4'>link</if><if condition='$ho.act_type eq 5'>res_read</if>" rel="{$ho.act_id}">

                                    <if condition='$ho.act_type eq 1 or $ho.act_type eq 2'>
                                        <a href='__APPURL__/ActivityData/doActivity/ap_id/{$ho.ap_id}/ad_id/{$ho.ad_id}' class="flex_book">
                                    </if>

                                    <if condition='$ho.act_type eq 3 || $ho.act_type eq 4 || $ho.act_type eq 5'>
                                        <a href='__APPURL__/ActivityData/activity/ap_id/{$ho.ap_id}/type/{$ho.act_type}' class="flex_book">
                                    </if>

                                    <div class="add_book">
                                        <div class="add_ico fl"></div>
                                        <div class="add_caption fl"></div>
                                    </div>
                                    <div class="add_label">{$ho.act_title}</div>
                                    </a>
                                </div>
                            </volist>
                        </div>
                   </div>
                </div>
            </volist>
        </div>
        <div class="clear"></div>

    </div>

</div>
</div>
<include file="Public:footer"/>