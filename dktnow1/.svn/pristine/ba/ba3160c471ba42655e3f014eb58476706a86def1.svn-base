<include file="../Public/header_main" />

<load file="__PUBLIC__/Css/Ilc/system_add.css"/>
<script type="text/javascript">
function check() {

    if ($("input[name=rc_title]").val() == '') {
            alert('栏目名不能为空', 0);
            return false;
    }
}
</script>
    <div class="title_hea">
        <i class="fl">编辑{$tag}</i>
        <a href="__URL__/index/rc_pid/{$vo.rc_pid}">返回列表</a>
    </div>
    <form method="post" action="__URL__/update/" onsubmit="return check();">
        <ul class="add_option">
            <li>
                <label>栏目名：</label>
                <input class="fl" type="text" name="rc_title" value="{$vo.rc_title}"/>
            </li>

            <li>
                <label>显示：</label>
                <select name="rc_is_show">
                     <option value="1" <eq name="vo.rc_is_show" value="1">selected</eq>>显示</option>
                     <option value="0" <eq name="vo.rc_is_show" value="0">selected</eq>>不显示</option>
                </select>
            </li>

            <li class="coBtn">
                <input type="hidden" name="rc_id" value="{$vo.rc_id}" >
                <input type="hidden" name="rc_pid" value="{$vo.rc_pid}">
                <input type="hidden"  name="rc_level" value="{$vo.rc_level}">
                <button class="save fin" value="" type="submit">保存</button>
                <button class="reset fin" value="" type="reset">清除</button>
            </li>
        </ul>
    </form>
