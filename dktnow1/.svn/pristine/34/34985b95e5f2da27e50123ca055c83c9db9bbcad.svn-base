<include file="Public:header"/>
<load href="__PUBLIC__/Css/Ilc/system.css"/>
<div class="warp">
    <include file="Public:left"/>
    <div class="system fl">
        <div class="sys_menu">
            <volist name="secondList" id="selist">
                <a href="__APPURL__{$selist['sn_url']}" <eq name="selist.sn_name" value="SchoolYear">class="selected"</eq>>{$selist['sn_title']}</a>
            </volist>
        </div>
        <div class="tools xin_tools">
            <span class="add"><i></i>新增</span>
        </div>
        <div class="_list fl">
            <div class="_caption t_caption">
                <ul>
                    <li class="_number">编号</li>
                    <li class="_year">学年</li>
                    <li class="_sxq_start">上学期开始</li>
                    <li class="_sxq_end">上学期结束</li>
                    <li class="_xxq_start">下学期开始</li>
                    <li class="_xxq_end">下学期结束</li>
                    <li class="_operate">管理</li>
                </ul>
            </div>
            <volist name="list" id="vo">

                <div class="_caption _List plist" attr="{$vo.sy_id}">
                    <ul>
                        <li class="_number">{$vo.sy_id}</li>
                        <li class="_year">{$vo.sy_year}</li>
                        <li class="_sxq_start">{$vo.sy_up_start|toDate='Y-m-d'}</li>
                        <li class="_sxq_end">{$vo.sy_up_end|toDate='Y-m-d'}</li>
                        <li class="_xxq_start">{$vo.sy_down_start|toDate='Y-m-d'}</li>
                        <li class="_xxq_end">{$vo.sy_down_end|toDate='Y-m-d'}</li>
                        <li class="_operate">修改</li>
                    </ul>
                </div>
            </volist>
        </div>
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript">
<!--
    // 表格排列
    var listObj =  {"_number": '8%',"_year": "15%" ,"_sxq_start": "15%","_sxq_end": "15%","_xxq_start": "15%",'_xxq_end':"15%",'_operate':"10%"};

    $(function() {
        setWidth(listObj);

        // 编辑
        $(document).on('click','._operate', function(){
            location.href = '__URL__/edit/id/'+$(this).parents('.plist').attr('attr');
        })
    })
//-->
</script>
<include file="Public:footer"/>