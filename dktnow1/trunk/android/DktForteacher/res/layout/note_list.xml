<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffbf6e9"  >

    <!-- left -->

    <RelativeLayout
        android:id="@+id/note_list_left"
        android:layout_width="300dp"
        android:layout_height="fill_parent" 
        android:focusableInTouchMode="true">

        <!-- left back -->

        <Button
            android:id="@+id/note_list_back_btn"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/back" />

        <!-- left search -->

        <EditText
            android:id="@+id/note_list_search_edit"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_list_back_btn"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:background="@drawable/note_search_blue_bg"
            android:singleLine="true" />

		  <ImageView
            android:id="@+id/note_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/note_list_search_edit"
            android:layout_marginTop="63dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/note_search_mirror_bg" />
        <!-- left new -->

        <RelativeLayout
            android:id="@+id/note_list_new_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_list_search_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
            	android:id="@+id/note_list_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/my_note_type"
                android:textColor="@color/note_hign_brown"
                android:textSize="22dp" />
        </RelativeLayout>

        <!-- left divider -->

        <View
            android:id="@+id/view_left_divider"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/note_list_new_linear"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_line_bg" />

        <!-- lieft btn -->

        <LinearLayout
            android:id="@+id/note_list_group_new_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/note_list_group_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/course_text_click_selector"
                android:drawableLeft="@drawable/note_list_group_btn_left_selector"
                android:drawablePadding="2dp"
                android:paddingLeft="5dp"
                android:text="新建分组"
                android:textColor="@color/course_hour_click_text" />

            <Button
                android:id="@+id/note_list_new_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/course_text_click_selector"
                android:drawableLeft="@drawable/note_list_new_btn_left_selector"
                android:drawablePadding="2dp"
                android:paddingLeft="5dp"
                android:text="新建笔记"
                 android:textColor="@color/course_hour_click_text" />
        </LinearLayout>

        <!-- left listview -->

        <ListView
            android:id="@+id/note_list_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/note_list_group_new_linear"
            android:layout_below="@id/view_left_divider"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/view_line_bg" />
    </RelativeLayout>

    <!-- right gridview -->

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/note_list_left"
        android:background="@drawable/note_list_gridview_bg" >
        <GridView
            android:id="@+id/note_list_gridview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/note_list_left"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:numColumns="4" />
    </RelativeLayout>

</RelativeLayout>