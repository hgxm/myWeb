<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_scan_student_item_bg" >

    <TextView
        android:id="@+id/exercise_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填空题:"
          android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
       android:textColor="#ff375c6c"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_style"
              android:layout_marginLeft="17dp"
        android:layout_marginTop="8dp" />
    
        <!-- divider 5 8 5 -->

    <TextView
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/exercise_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="#ffe0e0e0" />

    <LinearLayout
        android:id="@+id/exercise_full_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
         android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:paddingLeft="5dp" >

        <LinearLayout
            android:id="@+id/exercise_full_linear1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/exercise_icon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1)" />

            <EditText
                android:id="@+id/exercise_edit"
                android:layout_width="fill_parent"
                
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_full_linear2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/exercise_icon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2)" />

            <EditText
                android:id="@+id/exercise_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@id/exercise_full_linear"/>

</RelativeLayout>