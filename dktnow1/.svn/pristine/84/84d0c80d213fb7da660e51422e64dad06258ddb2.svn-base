* {
    margin:0;
    padding:0;
}
body {
    font-family: "Hiragino Sans GB","Hiragino Sans GB W3","Microsoft YaHei","微软雅黑",tahoma,arial,simhei,"黑体";
    font-size:12px;
}
h1,h2,h3,h4 {
    font-size:100%;
}
.clear {
    clear:both;
    height:0px;
}
.fl {
    float:left;
}
.fr {
    float:right;
}
em, cite, i {
    font-style:normal;
}
ol,li {
    list-style:none;
}
a {
    color:#040404;
    text-decoration:none;
}
img {
    border:0;
}
.warp {
    position:relative;
    width:100%;
    height:100%;
    overflow:hidden;
}
.warp_bg {
    position:absolute;
    left:0px;
    top:0px;
    width:100%;
    height:100%;
    z-index:-1;
}
.m_left {
    height:100%;
}