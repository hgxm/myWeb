-(void)addTableHead:(NSMutableDictionary *)str{
    
    tempDictForComm = str;;
    
    UIButton *addComment = [[UIButton alloc] initWithFrame:CGRectMake(640, 20, 100, 30)];
    addComment.layer.borderColor = MYCOLOR.CGColor;
