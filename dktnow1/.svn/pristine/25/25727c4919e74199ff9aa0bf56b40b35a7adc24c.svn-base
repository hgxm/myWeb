<include file="Public:header"/>
<load href="__PUBLIC__/Css/Ilc/system.css"/>
<load href="/Public/Js/Public/Ymd/WdatePicker.js"/>
<div class="warp">
    <include file="Public:left"/>
    <div class="addBox">
        <div class="title">
            <i class="fl">新增学年</i>
            <a class="fr" href="__URL__/index">返回列表</a>
        </div>
        <form action="__URL__/insert" method="post" onsubmit="return check();">
            <ul class="addOption">
                <li class="xyear">
                    <label>学年：</label>
                    <select name="sy_year">
                        <option value="0">请选择</option>
                        <volist name="year" id="year">
                            <option value="{$year}">{$year}</option>
                        </volist>
                    </select>
                </li>
                <li class="sxy">
                    <label>上学期：</label>
                    <input type="text" onclick="WdatePicker();" name="sy_up_start">至
                    <input type="text" onclick="WdatePicker();" name="sy_up_end">
                </li>
                <li class="xxq">
                    <label>下学期：</label>
                    <input type="text" onclick="WdatePicker();" name="sy_down_start">至
                    <input type="text" onclick="WdatePicker();" name="sy_down_end">
                </li>
                <li class="coBtn">
                    <input type="submit" value="保存" class="button save"/>
                    <input type="reset" value="取消" class="button reset"/>
                </li>
            </ul>
        </form>
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript">
<!--
    function check() {

        if ($("select[name=sy_year]").val() == 0) {
            showMessage('请选择学年');
            return false;
        }

        var flag = true;

        $('input[type=text]').each(function() {
            if ($(this).val() == '') {
                $(this).focus();
                showMessage('请选择日期');
                flag = false;
                return false;
            }
        })

        return flag;
    }
//-->
</script>
<include file="Public:footer"/>