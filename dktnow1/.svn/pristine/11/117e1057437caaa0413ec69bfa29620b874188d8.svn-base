<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/beige">

    <RelativeLayout android:id="@+id/home_title_layout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/home_title_bg">
    	
        <Button
        android:id="@+id/home_back_btn"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back" />
        
        <TextView android:id="@+id/home_title_text"
           	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/home_back_btn"
    		android:textColor="@color/white"
    		android:textSize="18sp"
    		android:layout_marginLeft="40dp"
    		android:text="朱老师，欢迎您回来"
    		android:layout_centerVertical="true"/>
        
        <RelativeLayout android:id="@+id/home_head_layout"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:layout_marginRight="10dp"
	    	android:background="@drawable/home_title_head_bg">
	    	
            <ImageView android:id="@+id/home_title_head"
                android:layout_width="50dp"
	    		android:layout_height="50dp"
	    		android:layout_centerInParent="true"
	    		android:src="@drawable/logo"/>
            
        </RelativeLayout>
        
        <TextView android:id="@+id/home_username_text"
           	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toLeftOf="@+id/home_head_layout"
    		android:textColor="@color/white"
    		android:textSize="18sp"
    		android:layout_marginRight="5dp"
    		android:text="朱老师"
    		android:layout_centerVertical="true"/>
        
    </RelativeLayout>
	
    <RelativeLayout android:id="@+id/home_content_layout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
        
        <RelativeLayout android:id="@+id/home_tool_layout"
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:orientation="vertical" 
    	android:background="@drawable/home_tool_bg">
            
        	<RadioGroup
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="50dp"
	            android:layout_marginLeft="15dp"
	            android:orientation="vertical" >
	            
        	    <RadioButton
	                android:id="@+id/home_home_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_btn_selector"                
	                android:text="@string/home" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
            	<RadioButton
	                android:id="@+id/home_resource_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_resource_btn_selector"                
	                android:text="@string/home_resource" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
            	<RadioButton
	                android:id="@+id/home_class_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_class_btn_selector"                
	                android:text="@string/home_class" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
            	<RadioButton
	                android:id="@+id/home_homework_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_homework_btn_selector"                
	                android:text="@string/home_homework" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
            	<RadioButton
	                android:id="@+id/home_msg_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_msg_btn_selector"                
	                android:text="@string/home_msg" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
            	<RadioButton
	                android:id="@+id/home_tool_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:button="@null"
	                android:background="#00000000"
	                android:drawablePadding="2dp"
	                android:gravity="center"
	                android:drawableTop="@drawable/home_tool_btn_selector"                
	                android:text="@string/home_tool" 
	                android:textColor="@color/white"
	                android:textSize="18sp"/>
        	</RadioGroup>
    	</RelativeLayout>
    	
        <RelativeLayout android:id="@+id/home_curr_layout"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="93dp"
    	android:orientation="vertical"
    	 >
        	
        	<TextView android:id="@+id/home_sche_text"
	           	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="@color/black"
	    		android:textSize="45sp"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginTop="8dp"
	    		android:text="@string/home_sche"/>
        	
        	<RelativeLayout android:id="@+id/form_week_layout"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_below="@+id/home_sche_text"
		    	android:orientation="vertical">
		        
		        <dkt.teacher.view.FormForWeekView
		            android:id="@+id/form_week"
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    />
		        
		        <dkt.teacher.view.FormForClassView
					android:id="@+id/form_class"
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
	    		/>
	   	 	</RelativeLayout>
	   	 	
        	
    	</RelativeLayout>
    </RelativeLayout>
    
</LinearLayout>